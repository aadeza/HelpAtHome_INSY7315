<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewUserNgoView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/homebackground">

    <LinearLayout
        android:id="@+id/userNgoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- NGO Overview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_white_card"
            android:padding="20dp"
            android:elevation="6dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imgNgoLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_logo" />

            <TextView
                android:id="@+id/txtNgoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGO Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtNgoCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Human Rights"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!-- Approval Explanation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_white_card"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What does approval mean?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtApprovalExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NGOs are reviewed by admins to ensure their mission, transparency, and impact align with platform standards. An NGO may be pending approval because:\n\n• The admin hasn't reviewed it yet\n• The vision or mission needs clarification\n• Financial or operational details are incomplete\n• The NGO is newly registered and awaiting verification"
                android:textSize="14sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/txtApprovalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved by admin: ❌"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#C62828"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Updates Section -->
        <LinearLayout
            android:id="@+id/updatesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_white_card"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Updates"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNgoUpdates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_ngo_update" />
        </LinearLayout>

        <!-- Help Request Form -->
        <LinearLayout
            android:id="@+id/helpRequestSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_white_card"
            android:padding="16dp"
            android:elevation="5dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send a Help Request (max 150 words)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/edtHelpRequest"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Describe your situation or request..."
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:maxLength="900"
                android:background="@drawable/edit_text_background" />

            <Button
                android:id="@+id/btnSendHelpRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Request"
                android:backgroundTint="#1E88E5"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:layout_gravity="end" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/round_white_card"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtContactValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+27 76 123 4567"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/txtContactMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile â€¢ Owner"
            android:textSize="12sp"
            android:textColor="#666666" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnRemoveContact"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Remove contact"
        android:background="?selectableItemBackgroundBorderless"
        app:tint="#D32F2F" />
</LinearLayout>

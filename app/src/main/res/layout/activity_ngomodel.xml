<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/homebackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Dashboard Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/helphomeicon"
                android:contentDescription="@string/logoo" />

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logged_in_as"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:textColor="#1E88E5" />

        </LinearLayout>

        <!-- ðŸ“Š Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Stats will appear here"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- NGO Creation Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_ngo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E88E5" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ngo_name"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/editFounder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/founder_name"
                    android:layout_marginTop="8dp" />

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/editDateFounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/date_founded_yyyy_mm_dd"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnCreateNGO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_ngo"
                    android:backgroundTint="#1E88E5"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Post Update Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post_an_update"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#43A047" />

                <EditText
                    android:id="@+id/editPostMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_update_max_50_words"
                    android:layout_marginTop="8dp"
                    android:maxLines="3" />

                <Button
                    android:id="@+id/btnPostUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/post"
                    android:backgroundTint="#43A047"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Help Request + Call Buttons Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F" />

                <Button
                    android:id="@+id/btnHelpRequests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_help_requests"
                    android:backgroundTint="#FFC107"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />

                <Button
                    android:id="@+id/btnCallUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Help Requests"
                    android:backgroundTint="#FFC107"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Output Text Block -->
        <TextView
            android:id="@+id/txtViewResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_ngo_information_will_appear_here"
            android:padding="16dp"
            android:textSize="14sp"
            android:background="#EEEEEE"
            android:layout_marginBottom="24dp"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewNgoDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/homebackground">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- NGO Info Card -->
        <LinearLayout
            android:id="@+id/cardNgoDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_white_card"
            android:padding="20dp"
            android:elevation="6dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imgNgoLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_logo" />

            <TextView
                android:id="@+id/txtNgoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGO Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Founder -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Founder:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111" />
            <TextView
                android:id="@+id/txtFounder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#555555"
                android:layout_marginBottom="10dp" />

            <!-- Founded Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Founded:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111" />
            <TextView
                android:id="@+id/txtDateFounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YYYY-MM-DD"
                android:textColor="#555555"
                android:layout_marginBottom="10dp" />

            <!-- Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111" />
            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Community Support"
                android:textColor="#555555"
                android:layout_marginBottom="10dp" />

            <!-- Mission -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mission:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111" />
            <TextView
                android:id="@+id/txtMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#555555"
                android:layout_marginBottom="10dp" />

            <!-- Vision -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vision:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111" />
            <TextView
                android:id="@+id/txtVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#555555"
                android:layout_marginBottom="10dp" />

            <!-- Contact Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111" />
            <TextView
                android:id="@+id/txtContactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:layout_marginBottom="12dp" />

            <!-- Approval Status -->
            <TextView
                android:id="@+id/txtApproved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved by admin: ❌"
                android:textSize="16sp"
                android:textColor="#C62828"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Update Posting Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_white_card"
            android:padding="16dp"
            android:elevation="5dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post an update (max 150 words)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/edtUpdate"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Write your update here..."
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:maxLength="900"
                android:background="@drawable/edit_text_background" />

            <Button
                android:id="@+id/btnPostUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Update"
                android:backgroundTint="#1E88E5"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:layout_gravity="end" />
        </LinearLayout>

        <!-- Help Requests Section -->
        <TextView
            android:id="@+id/lblHelpRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help Requests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fillViewport="true"
            android:background="@drawable/round_white_card"
            android:elevation="4dp">

            <LinearLayout
                android:id="@+id/helpRequestsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Help requests will appear here)"
                    android:textColor="#666666" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</ScrollView>
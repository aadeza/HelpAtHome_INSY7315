<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewLawDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/homebackground"
    tools:context=".LawDashboardActivity">

    <LinearLayout
        android:id="@+id/layoutLawDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:src="@drawable/helphomeicon" />

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Law Enforcement Dashboard"
            android:textColor="#63C1FF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active: 0 | Resolved: 0"
                    android:textColor="#1976D2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/textSyncTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last synced at: --:--"
                    android:textColor="#555555"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Reminders -->
        <TextView
            android:id="@+id/textPSATitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE082"
            android:text="ðŸš¨ Law Enforcement Reminders ðŸš¨"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textPSAContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3F2FD"
            android:text="â€¢ Ensure all alerts are verified before marking as resolved.\nâ€¢ Maintain confidentiality of user data.\nâ€¢ For any technical issues, contact admin support immediately.\n\nâ€¢ Dispatch: +27 11 123 4567\nâ€¢ National Command Center: +27 86 000 1234\nâ€¢ Fire Department: +27 11 987 6543\nâ€¢ Emergency Medical Services: +27 11 246 8100\nâ€¢ Forensics Unit: +27 11 369 2580\n\nâ€¢ Protocol Reminder:  \n   - Use secure radio channels for sensitive updates."
            android:textColor="#000000"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-light" />

        <!-- Active Alerts -->
        <TextView
            android:id="@+id/activeAlertsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active SOS Alerts"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAlerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"
            tools:listitem="@layout/alert_item" />

        <!-- Resolved Alerts -->
        <TextView
            android:id="@+id/resolvedAlertsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolved Alerts History"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerResolvedAlerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"
            tools:listitem="@layout/alert_item" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminDashboardRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackground"
    tools:context=".AdminDashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <!-- ðŸ”¹ Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/adminLogo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/helphomeicon"
                    android:contentDescription="App Logo" />

                <TextView
                    android:id="@+id/adminTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Admin Dashboard"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:paddingStart="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/adminNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin Name"
                        android:textSize="14sp"
                        android:textColor="#0D47A1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"/>

                    <ImageButton
                        android:id="@+id/adminProfileButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/profileiconn"
                        android:contentDescription="Profile" />
                </LinearLayout>
            </LinearLayout>

            <!-- ðŸ”¹ Section 1: User Overview -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/userOverviewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Overview"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0D47A1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/userCounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admins: 0 | Law: 0 | Civilians: 0 | NGOs: 0"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/userBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/userRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scrollbars="vertical" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Section 2: NGO Approval -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/ngoApprovalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NGO Approval"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0D47A1"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ngoApprovalRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scrollbars="vertical" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Section 3: Message Moderation -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/messageModerationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reported_dismissed_messages"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0D47A1"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/messageModerationRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:scrollbars="vertical"
                        tools:listitem="@layout/item_message_moderation"
                        android:visibility="visible"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



                </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Card background color -->
    <solid android:color="#A77DECF8"/>

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Subtle border to add depth -->
    <stroke
        android:width="1dp"
        android:color="#B13EDDF4"/>

    <!-- Soft shadow effect (works better with elevation in layout) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

</shape>

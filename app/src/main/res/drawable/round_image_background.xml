<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color behind logo -->
    <solid android:color="#FFFFFF" />

    <!-- Soft border for definition -->
    <stroke
        android:width="2dp"
        android:color="#1E88E5" />

    <!-- Space between image and edge -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />

</shape>
